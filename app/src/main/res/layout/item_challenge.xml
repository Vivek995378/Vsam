<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragmentBgColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance bugs"
        android:visibility="gone"
        android:textColor="@color/textColor"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#vsamdance"
            android:textSize="9sp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:textColor="@color/postTextColor"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageView"
            android:visibility="gone"
            android:text="Sponsored by "
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:textColor="@color/btnColor"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_sponsor1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv2"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="@color/textColor"/>

    </RelativeLayout>

</LinearLayout>