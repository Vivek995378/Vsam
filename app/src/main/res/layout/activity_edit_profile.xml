<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fragmentBgColor"
    android:orientation="vertical"
    tools:context=".activity.EditProfile">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="start">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:onClick="backEditProfile"
            android:src="@drawable/ic_back_arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/backArrow"
            android:fontFamily="@font/montserrat"
            android:padding="8dp"
            android:text="Edit Profile"
            android:textColor="@color/whiteColor"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeWidth="1dp"
        app:strokeColor="@color/whiteColor"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/piccc"
        app:civ_border_color="@color/cardColor"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Change Profile Photo"
        android:textColor="#96CEFF"
        android:textSize="16sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Website"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Bio"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintTextColor="@color/whiteColor"
                android:textColorHint="@color/highlightTextColor"
                android:backgroundTint="@color/highlightTextColor">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:textColorHint="@color/highlightTextColor"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Gender"
                android:padding="8dp"
                android:textColorHint="@color/highlightTextColor"
                android:textColor="@color/whiteColor"
                android:inputType="text"
                android:textSize="19sp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginStart="2dp"
                android:background="@color/highlightTextColor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:paddingStart="56dp"
                android:paddingEnd="56dp"
                android:background="@drawable/button_gradient"
                android:text="SAVE"
                android:textColor="@color/whiteColor" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>