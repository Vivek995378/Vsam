<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentTabColor"
    tools:context=".login.SignupOtpActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:onClick="finishSignupOtp"
        app:srcCompat="@drawable/ic_back_arrow"
        tools:ignore="VectorDrawableCompat" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="A 6 digit code has been sent on your mobile number"
            android:textColor="@color/whiteColor"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/gray_border_box_black_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/inputotp1"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:textColor="@color/whiteColor"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputotp2"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputotp3"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputotp4"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputotp5"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/inputotp6"
                    android:layout_width="40dp"
                    android:layout_height="46dp"
                    android:autofillHints="autofill"
                    android:textColor="@color/whiteColor"
                    android:backgroundTint="@color/highlightTextColor"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="yes"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't Received, "
                android:textColor="@color/highlightTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textresendotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/tv11"
                android:gravity="center"
                android:text=" Resend in "
                android:textColor="@color/highlightTextColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/textresendotp"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="00"
                android:textColor="@color/fbColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/timer"
                android:paddingLeft="4dp"
                android:text="seconds"
                android:textColor="@color/highlightTextColor"
                android:textSize="14sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/submitotp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/relativeLayout2"
            android:layout_centerInParent="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="?actionBarSize"
            android:layout_marginEnd="56dp"
            android:paddingBottom="2dp"
            android:background="@drawable/button_gradient"
            android:gravity="center"
            android:onClick="enterUserInformationPhone"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvSample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/submitotp"
            android:textColor="@color/whiteColor"
            android:visibility="gone"
            android:text="Hi there"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>