<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LiveFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/postUserProfile"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/pic"
            app:strokeColor="@color/whiteColor"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/postUserProfile"
            android:gravity="center"
            android:text="Krishta_007"
            android:textSize="18sp"
            android:textColor="@color/whiteColor" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/postUserProfile"
            android:layout_below="@id/textView8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Live"
            android:textColor="#DC0000"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textView9"
            android:layout_below="@id/textView8"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="50:04"
            android:textColor="@color/whiteColor"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/red_button"
            android:text="END"
            android:textColor="@color/whiteColor"/>

        <ImageView
            android:id="@+id/img_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eye"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/imageView12"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_eye"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:text="546"
            android:textColor="@color/whiteColor"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/img_send"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/greyish_capsule"
            android:alpha="0.3"
            android:textCursorDrawable="@drawable/theme_color_cursor"
            android:hint="Message"
            android:textColorHint="@color/textColor"
            android:textColor="@color/whiteColor" />

        <ImageView
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_send" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@id/relativeLayout2"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/img_video_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_video_stop"/>

        <ImageView
            android:id="@+id/img_mute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:layout_below="@id/img_video_stop"
            android:src="@drawable/ic_mute2"/>

        <ImageView
            android:id="@+id/img_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/img_mute"
            android:src="@drawable/ic_filter"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/relativeLayout2"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="80dp"
        android:requiresFadingEdge="vertical"
        android:fillViewport="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

</RelativeLayout>